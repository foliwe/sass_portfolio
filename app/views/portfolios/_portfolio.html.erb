<%= link_to portfolio.title, portfolio_show_path(portfolio)%> <br>
    <%= portfolio.subtitle %> <br>
    <p><%= portfolio.body %> </p>
    <%= link_to image_tag portfolio.thumb_image unless portfolio.thumb_image.nil? %> <br>
    <%= link_to "Edit Portfolio", edit_portfolio_path(portfolio) if logged_in?(:site_admin)%> | 
    <%= link_to "Delete Portfolio", portfolio, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin)%>
    <hr>
